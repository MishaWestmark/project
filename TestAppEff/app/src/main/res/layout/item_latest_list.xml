<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="115dp"
        android:layout_height="150dp"
        android:src="@color/text_color_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/background_text_grey"
        android:gravity="center"
        android:text="Phones"
        android:textColor="@color/text_color_black"
        android:textSize="6sp"
        app:layout_constraintStart_toStartOf="@id/iv_main"
        app:layout_constraintTop_toTopOf="@id/iv_main" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Samsung S10"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintStart_toStartOf="@id/tv_category"
        app:layout_constraintTop_toBottomOf="@id/tv_category" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="$ 180.000"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_main"
        app:layout_constraintStart_toStartOf="@id/tv_name" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_fab"
        app:layout_constraintEnd_toEndOf="@id/iv_main"
        app:layout_constraintBottom_toBottomOf="@id/iv_main"
        android:id="@+id/btn_fab"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp" />


</androidx.constraintlayout.widget.ConstraintLayout>