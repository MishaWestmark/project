<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/image_view_avatar"
        app:layout_constraintStart_toStartOf="@id/image_view_avatar"
        app:layout_constraintTop_toBottomOf="@id/image_view_avatar"
        tools:text="Name" />

    <TextView
        android:id="@+id/txt_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/image_view_avatar"
        app:layout_constraintStart_toStartOf="@id/image_view_avatar"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        tools:text="Species" />

    <TextView
        android:id="@+id/txt_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/image_view_avatar"
        app:layout_constraintStart_toStartOf="@id/image_view_avatar"
        app:layout_constraintTop_toBottomOf="@id/txt_species"
        tools:text="Gender" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/image_view_avatar"
        app:layout_constraintStart_toStartOf="@id/image_view_avatar"
        app:layout_constraintTop_toBottomOf="@id/txt_gender"
        tools:text="Status" />

    <TextView
        android:id="@+id/txt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/image_view_avatar"
        app:layout_constraintStart_toStartOf="@id/image_view_avatar"
        app:layout_constraintTop_toBottomOf="@id/txt_status"
        tools:text="Last Location" />

    <TextView
        android:id="@+id/txt_episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/image_view_avatar"
        app:layout_constraintStart_toStartOf="@id/image_view_avatar"
        app:layout_constraintTop_toBottomOf="@id/txt_location"
        tools:text="Episodes" />
</androidx.constraintlayout.widget.ConstraintLayout>